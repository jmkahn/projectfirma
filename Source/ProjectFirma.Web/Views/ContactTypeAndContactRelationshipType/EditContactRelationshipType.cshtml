@using LtInfo.Common.Mvc
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@inherits ProjectFirma.Web.Views.ContactTypeAndContactRelationshipType.EditContactRelationshipType
              

<div class="validationError">
    @Html.ValidationSummary()
</div>


<div>   
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-xs-12 col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.ContactRelationshipTypeName)</div>
                <div class="col-xs-12 col-sm-9">
                    @Html.TextBoxFor(m => m.ContactRelationshipTypeName, new { style = "width: 100%", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.CanOnlyBeRelatedOnceToAProject)</div>
                <div class="col-sm-9">
                    <div class="radio-inline">
                        <label>
                            @Html.RadioButtonFor(m => m.CanOnlyBeRelatedOnceToAProject, true) Yes
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            @Html.RadioButtonFor(m => m.CanOnlyBeRelatedOnceToAProject, false) No
                        </label>
                    </div>
                    @Html.ValidationMessageFor(m => m.CanOnlyBeRelatedOnceToAProject)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.ContactRelationshipTypeDescription)</div>
                <div class="col-sm-9">
                    @Html.TextAreaFor(m=>m.ContactRelationshipTypeDescription, new Dictionary<string,object>{{"class","form-control"}})
                    @Html.ValidationMessageFor(m => m.CanOnlyBeRelatedOnceToAProject)
                </div>
            </div>

            <hr />
            <p>Select which @FieldDefinitionEnum.ContactType.ToType().GetFieldDefinitionLabelPluralized() can be associated to a @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() with this @FieldDefinitionEnum.ProjectRelationshipType.ToType().GetFieldDefinitionLabel()</p>
            <div class="form-group">
                <div class="col-xs-12 col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.ContactTypeIDs)</div>
                <div class="col-xs-12 col-sm-9">
                    @Html.CheckBoxListFor(x => x.ContactTypeIDs, ViewDataTyped.AllContactTypes.ToSelectList(x => x.ContactTypeID.ToString(), x => x.ContactTypeName), new { style ="display:block"}, CheckboxExtensions.ColNumber.twoCols)
                </div>
            </div>                        
        </div>
        @Html.HiddenFor(m => m.RelationshipTypeID)
    }
    
</div>
